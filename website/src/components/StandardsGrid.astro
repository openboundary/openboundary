---
const standards = [
  {
    name: 'OpenAPI',
    description: 'API contracts',
    icon: 'openapi',
    color: '#85EA2D',
    soon: false,
  },
  {
    name: 'Casbin',
    description: 'Authorization policies',
    icon: 'casbin',
    color: '#FF6B6B',
    soon: false,
  },
  {
    name: 'Drizzle',
    description: 'Database schemas',
    icon: 'drizzle',
    color: '#00D4FF',
    soon: false,
  },
  {
    name: 'gRPC',
    description: 'Service definitions',
    icon: 'grpc',
    color: '#888',
    soon: true,
  },
  {
    name: 'CloudEvents',
    description: 'Event specs',
    icon: 'cloudevents',
    color: '#888',
    soon: true,
  },
  {
    name: 'AsyncAPI',
    description: 'Event-driven APIs',
    icon: 'asyncapi',
    color: '#888',
    soon: true,
  },
];
---

<div class="standards-grid">
  {standards.map((standard) => (
    <div class={`standard-item ${standard.soon ? 'soon' : ''}`}>
      <div class="standard-logo">
        {standard.icon === 'openapi' && (
          <svg viewBox="0 0 24 24" fill="none">
            <path d="M12 2L2 7v10l10 5 10-5V7L12 2z" stroke={standard.color} stroke-width="1.5"/>
            <path d="M12 22V12M2 7l10 5 10-5" stroke={standard.color} stroke-width="1.5"/>
          </svg>
        )}
        {standard.icon === 'casbin' && (
          <svg viewBox="0 0 24 24" fill="none">
            <rect x="3" y="11" width="18" height="10" rx="2" stroke={standard.color} stroke-width="1.5"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke={standard.color} stroke-width="1.5"/>
            <circle cx="12" cy="16" r="2" fill={standard.color}/>
          </svg>
        )}
        {standard.icon === 'drizzle' && (
          <svg viewBox="0 0 24 24" fill="none">
            <ellipse cx="12" cy="6" rx="8" ry="3" stroke={standard.color} stroke-width="1.5"/>
            <path d="M4 6v6c0 1.66 3.58 3 8 3s8-1.34 8-3V6" stroke={standard.color} stroke-width="1.5"/>
            <path d="M4 12v6c0 1.66 3.58 3 8 3s8-1.34 8-3v-6" stroke={standard.color} stroke-width="1.5"/>
          </svg>
        )}
        {standard.icon === 'grpc' && (
          <svg viewBox="0 0 24 24" fill="none">
            <path d="M4 12h16M12 4v16" stroke={standard.color} stroke-width="1.5"/>
            <circle cx="4" cy="12" r="2" stroke={standard.color} stroke-width="1.5"/>
            <circle cx="20" cy="12" r="2" stroke={standard.color} stroke-width="1.5"/>
            <circle cx="12" cy="4" r="2" stroke={standard.color} stroke-width="1.5"/>
            <circle cx="12" cy="20" r="2" stroke={standard.color} stroke-width="1.5"/>
          </svg>
        )}
        {standard.icon === 'cloudevents' && (
          <svg viewBox="0 0 24 24" fill="none">
            <path d="M18 10a6 6 0 0 0-12 0c-2.76 0-5 2.24-5 5s2.24 5 5 5h12c2.76 0 5-2.24 5-5s-2.24-5-5-5z" stroke={standard.color} stroke-width="1.5"/>
          </svg>
        )}
        {standard.icon === 'asyncapi' && (
          <svg viewBox="0 0 24 24" fill="none">
            <path d="M4 4l8 8-8 8" stroke={standard.color} stroke-width="1.5"/>
            <path d="M12 4l8 8-8 8" stroke={standard.color} stroke-width="1.5"/>
          </svg>
        )}
      </div>
      <div class="standard-info">
        <strong>{standard.name}</strong>
        <span>{standard.description}</span>
      </div>
      {standard.soon && <span class="soon-badge">Soon</span>}
    </div>
  ))}
</div>

<style>
  .standards-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 32px;
  }

  .standard-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 20px;
    background: var(--ob-bg-subtle);
    border: 1px solid var(--ob-border);
    border-radius: 8px;
    transition: border-color 0.15s;
  }

  .standard-item:hover {
    border-color: var(--ob-border-hover);
  }

  .standard-item.soon {
    opacity: 0.5;
  }

  .standard-logo {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .standard-logo svg {
    width: 100%;
    height: 100%;
  }

  .standard-info strong {
    display: block;
    font-size: 14px;
    font-weight: 500;
  }

  .standard-info span {
    font-size: 12px;
    color: var(--ob-text-tertiary);
  }

  .soon-badge {
    font-family: var(--ob-font-mono);
    font-size: 10px;
    color: var(--ob-amber);
    background: rgba(245, 158, 11, 0.1);
    padding: 2px 6px;
    border-radius: 3px;
    margin-left: auto;
  }

  @media (max-width: 640px) {
    .standards-grid {
      flex-direction: column;
    }

    .standard-item {
      width: 100%;
    }
  }
</style>
