---
interface Props {
  title?: string;
}

const { title = 'Terminal' } = Astro.props;
---

<div class="terminal">
  <div class="terminal-header">
    <div class="terminal-dots">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <div class="terminal-title">{title}</div>
  </div>
  <div class="terminal-body">
    <slot />
  </div>
</div>

<style>
  .terminal {
    background: var(--ob-bg-subtle);
    border: 1px solid var(--ob-border);
    border-radius: 6px;
    overflow: hidden;
    max-width: 560px;
    margin: 0 auto;
    text-align: left;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-bottom: 1px solid var(--ob-border);
    background: var(--ob-bg-muted);
  }

  .terminal-dots {
    display: flex;
    gap: 6px;
  }

  .terminal-dots span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--ob-bg-elevated);
    border: 1px solid var(--ob-border);
  }

  .terminal-title {
    font-family: var(--ob-font-mono);
    font-size: 11px;
    color: var(--ob-text-tertiary);
  }

  .terminal-body {
    padding: 20px;
    font-family: var(--ob-font-mono);
    font-size: 13px;
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .terminal {
      max-width: 100%;
    }

    .terminal-body {
      padding: 16px;
      font-size: 12px;
    }

    .terminal-header {
      padding: 10px 14px;
    }

    .terminal-title {
      font-size: 10px;
    }
  }
</style>
