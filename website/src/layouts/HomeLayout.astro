---
import '@fontsource/ibm-plex-sans/400.css';
import '@fontsource/ibm-plex-sans/500.css';
import '@fontsource/ibm-plex-sans/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/jetbrains-mono/500.css';
import '@fontsource/jetbrains-mono/600.css';
import '@fontsource/ibm-plex-mono/400.css';
import '@fontsource/ibm-plex-mono/500.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Open-source specification compiler for backend architecture. Define security boundaries in YAML, generate type-safe TypeScript." } = Astro.props;

const navLinks = [
  { name: 'Docs', url: '/docs/' },
  { name: 'Templates', url: '/docs/templates' },
  { name: 'GitHub', url: 'https://github.com/openboundary/openboundary' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
  <meta name="theme-color" content="#0c0c0c">

  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:image" content="https://openboundary.org/images/og-image.png">

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content="https://openboundary.org/images/og-image.png">
</head>
<body>
  <header class="header">
    <div class="header-inner">
      <a href="/" class="logo">
        <svg class="logo-icon" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="40" y="40" width="432" height="432" rx="48" stroke="currentColor" stroke-width="28" fill="none"/>
          <rect x="104" y="104" width="304" height="304" rx="36" stroke="currentColor" stroke-width="28" fill="none"/>
          <rect x="168" y="168" width="176" height="176" rx="24" stroke="currentColor" stroke-width="28" fill="none"/>
          <rect x="232" y="232" width="48" height="48" rx="8" fill="currentColor"/>
        </svg>
        <span>OpenBoundary</span>
      </a>

      <nav class="nav">
        {navLinks.map((link) => (
          <a href={link.url}>{link.name}</a>
        ))}
      </nav>

      <div class="header-right">
        <a href="https://github.com/openboundary/openboundary" class="github-btn">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          Star
        </a>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="footer-inner">
      <div class="footer-brand">
        <svg class="footer-logo" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="40" y="40" width="432" height="432" rx="48" stroke="currentColor" stroke-width="36" fill="none"/>
          <rect x="104" y="104" width="304" height="304" rx="36" stroke="currentColor" stroke-width="36" fill="none"/>
          <rect x="168" y="168" width="176" height="176" rx="24" stroke="currentColor" stroke-width="36" fill="none"/>
          <rect x="232" y="232" width="48" height="48" rx="8" fill="currentColor"/>
        </svg>
        <span>OpenBoundary</span>
        <span class="license">AGPL-3.0</span>
      </div>
      <div class="footer-links">
        <a href="/docs/">Docs</a>
        <a href="https://github.com/openboundary/openboundary">GitHub</a>
        <a href="https://github.com/openboundary/openboundary/releases">Releases</a>
      </div>
    </div>
  </footer>
</body>
</html>

<style is:global>
  :root {
    /* Typography */
    --ob-font-display: 'JetBrains Mono', monospace;
    --ob-font-sans: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, sans-serif;
    --ob-font-mono: 'IBM Plex Mono', 'SF Mono', Consolas, monospace;

    /* Colors */
    --ob-bg: #0c0c0c;
    --ob-bg-subtle: #0a0a0a;
    --ob-bg-muted: #141414;
    --ob-bg-elevated: rgba(255, 255, 255, 0.03);
    --ob-text: #e8e8e8;
    --ob-text-secondary: #a0a0a0;
    --ob-text-tertiary: #525252;
    --ob-border: rgba(255, 255, 255, 0.06);
    --ob-accent: #5eead4;
    --ob-accent-dim: rgba(94, 234, 212, 0.1);
    --ob-amber: #fbbf24;

    /* Syntax highlighting */
    --sy-keyword: #f9a8d4;
    --sy-string: #5eead4;
    --sy-number: #c4b5fd;
    --sy-comment: #4a4a4a;
    --sy-punctuation: #737373;
    --sy-function: #5eead4;
  }

  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--ob-font-sans);
    background: var(--ob-bg);
    color: var(--ob-text);
    line-height: 1.65;
    font-size: 15px;
    -webkit-font-smoothing: antialiased;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  /* Button styles for landing page */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 16px;
    font-size: 13px;
    font-weight: 500;
    border-radius: 4px;
    transition: all 0.15s ease;
    cursor: pointer;
  }

  .btn-primary {
    background: #e8e8e8;
    color: #0c0c0c;
    border: none;
  }

  .btn-primary:hover {
    background: #fff;
  }

  .btn-secondary {
    color: #8a8a8a;
    border: 1px solid rgba(255, 255, 255, 0.06);
    background: transparent;
  }

  .btn-secondary:hover {
    color: #e8e8e8;
    border-color: rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.03);
  }
</style>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    height: 56px;
    padding: 0 24px;
    background: rgba(12, 12, 12, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .header-inner {
    max-width: 1200px;
    height: 100%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 500;
    font-size: 13px;
  }

  .logo-icon {
    width: 22px;
    height: 22px;
    color: #5eead4;
  }

  .nav {
    display: flex;
    gap: 28px;
  }

  .nav a {
    font-size: 13px;
    color: #525252;
    transition: color 0.15s;
  }

  .nav a:hover {
    color: #8a8a8a;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .github-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    font-size: 13px;
    font-weight: 500;
    color: #8a8a8a;
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 4px;
    transition: all 0.15s;
  }

  .github-btn:hover {
    color: #e8e8e8;
    border-color: rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.03);
  }

  .footer {
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    padding: 28px 24px;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 12px;
    color: #525252;
  }

  .footer-logo {
    width: 16px;
    height: 16px;
    color: #5eead4;
  }

  .license {
    font-size: 10px;
    font-weight: 500;
    padding: 2px 6px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 2px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links {
    display: flex;
    gap: 24px;
  }

  .footer-links a {
    font-size: 12px;
    color: #525252;
    transition: color 0.15s;
  }

  .footer-links a:hover {
    color: #8a8a8a;
  }

  @media (max-width: 768px) {
    .nav {
      display: none;
    }

    .github-btn {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .footer-inner {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
  }
</style>
